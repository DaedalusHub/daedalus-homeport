{
    "endOfLine": "auto",
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "overrides": [
        {
            "files": ["*.css"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
